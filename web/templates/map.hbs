<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>动态添加、删除、插入输入行</title>
    <link href="../static/icon.ico" rel="icon" type="image/x-icon">
    <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.4.15&key=f4b0954e7374b232ec9b81691ba06728"></script>
    <style>
        #container {
            width: 100%;
            height: 400px;
        }
        .latlong-row {
            margin-bottom: 5px;
        }
        .latlong-row button {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <button onclick="addRowTop()">在顶部添加行</button>
    <form id="latlongRows">
        <!-- 动态插入行 -->
    </form>
    <button type="button" id="submit-button">提交数据</button>
    <div id="container"></div>

    <script>
        var map = new AMap.Map('container', {
            resizeEnable: true,
            zoom: 11,
            center: [116.397428, 39.90923] // 地图中心点
        });

        var currentRowIndex = null; // 当前选中的行索引

        // 在顶部添加新行
        function addRowTop() {
            addRow(0);
        }

        // 在指定索引后添加新行
        function addRow(index) {
            var rowContainer = document.getElementById('latlongRows');
            var newRow = document.createElement('div');
            newRow.className = 'latlong-row';

            const id=document.createElement('input');
            id.type='text';
            id.className='id';
            id.placeholder='id';
            id.name='id';
            newRow.appendChild(id);

            const longitude=document.createElement('input');
            longitude.type='text';
            longitude.className='longitude';
            longitude.placeholder='经度';
            longitude.name='longitude';
            newRow.appendChild(longitude);

            const latitude=document.createElement('input');
            latitude.type='text';
            latitude.className='latitude';
            latitude.placeholder='纬度';
            latitude.name='latitude';
            newRow.appendChild(latitude);

            const select=document.createElement('button');
            select.textContent='选择';
            select.onclick=function(){selectRow(this);};
            newRow.appendChild(select);

            const deletes=document.createElement('button');
            deletes.textContent='删除';
            deletes.onclick=function(){deleteRow(this.parentNode);};
            newRow.appendChild(deletes);

            const add=document.createElement('button');
            add.textContent='添加';
            add.onclick=function(){addRowBelow(this.parentNode);};
            newRow.appendChild(add);

            if (index === 0) {
                rowContainer.insertBefore(newRow, rowContainer.firstChild);
            } else {
                rowContainer.insertBefore(newRow, index.nextElementSibling);
            }
            updateRowIndices();
        }

        // 在当前行下添加新行
        function addRowBelow(currentRow) {
            var rowIndex = Array.from(currentRow.parentNode.children).indexOf(currentRow);
            addRow(currentRow);
            updateRowIndices();
        }

        // 更新行索引，以保证它们的连续性（如果需要索引）
        function updateRowIndices() {
            var rows = document.getElementById('latlongRows').getElementsByClassName('latlong-row');
            Array.from(rows).forEach((row, index) => {
                // 更新行的数据索引（如果需要使用到索引属性）
            });
        }

        // 选择当前行
        function selectRow(button) {
            var rows = document.getElementsByClassName('latlong-row');
            Array.from(rows).forEach(row => row.classList.remove('selected-row'));
            var currentRow = button.parentNode;
            currentRowIndex = Array.from(currentRow.parentNode.children).indexOf(currentRow);
            currentRow.classList.add('selected-row');
        }

        // 删除当前行
        function deleteRow(rowElement) {
            var rowContainer = document.getElementById('latlongRows');
            rowContainer.removeChild(rowElement);
        }

        // 监听地图点击事件，更新选中行的经纬度
        map.on('click', function(e) {
            if(currentRowIndex != null) {
                var rows = document.getElementById('latlongRows').children;
                var selectedRow = rows[currentRowIndex];
                selectedRow.getElementsByClassName('longitude')[0].value = e.lnglat.getLng();
                selectedRow.getElementsByClassName('latitude')[0].value = e.lnglat.getLat();
            }
        });
        document.getElementById('submit-button').addEventListener('click', function() {
            const inputGroups = document.querySelectorAll('.latlong-row');
            let dataList = [];

            inputGroups.forEach(group => {
                let dataObject = {};
                group.querySelectorAll('input').forEach(input => {
                    dataObject[input.name] = input.value;
                });
                dataList.push(dataObject);
            });

            fetch('/update-database', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(dataList)
            })
            .then(response => response.json())
            .then(data => {
                // 对响应做进一步处理
            })
            .catch((error) => {
                // 处理错误
            });
        });
    </script>
</body>
</html>