<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>多行输入与地图联动示例</title>
    <link href="../static/icon.ico" rel="icon" type="image/x-icon">
    <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.4.15&key=f4b0954e7374b232ec9b81691ba06728"></script>
    <style>
        #container {
            width: 100%;
            height: 400px;
        }
        .latlong-row {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div id="latlongRows">
        <!-- 示例的几行输入框 -->
        <div class="latlong-row" data-index="0">
            <input type="text" class="longitude" placeholder="经度" readonly>
            <input type="text" class="latitude" placeholder="纬度" readonly>
            <button onclick="selectRow(0)">选择</button>
        </div>
        <div class="latlong-row" data-index="1">
            <input type="text" class="longitude" placeholder="经度" readonly>
            <input type="text" class="latitude" placeholder="纬度" readonly>
            <button onclick="selectRow(1)">选择</button>
        </div>
        <!-- 更多行可以按需添加 -->
    </div>
    <div id="container"></div>

    <script>
        var map = new AMap.Map('container', {
            resizeEnable: true,
            zoom: 11,
            center: [116.397428, 39.90923] // 地图中心点
        });

        var currentRowIndex = null; // 当前选中的行索引

        // 更新当前选中行
        function selectRow(index) {
            currentRowIndex = index;
        }

        // 地图点击事件
        map.on('click', function(e) {
            if(currentRowIndex != null) {
                var rows = document.getElementsByClassName('latlong-row');
                var selectedRow = rows[currentRowIndex];
                selectedRow.querySelector('.longitude').value = e.lnglat.getLng();
                selectedRow.querySelector('.latitude').value = e.lnglat.getLat();
            }
        });
    </script>
</body>
</html>